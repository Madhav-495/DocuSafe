<section class="text-light p-lg-0 text-sm-start">
    <div class="contianer-fluid bg-warning text-dark p-3 mb-5">
        <h1 class="text-center"style="font-family:cursive">
            Students's Login
        </h1>

        
    </div>
    <!-- check for correct reg no and password -->
    <% if (check1.length>0) { %>
      <div class="alert alert-danger text-align-center" role="alert">
        Password Not Correct
      </div>
    <% } %>
    <% if (check2.length>0) { %>
      <div class="alert alert-danger text-align-center" role="alert">
        Registration Number not registered
      </div>
    <% } %>
    <div class="container">
      <div class="row">
        <div class="col-md-6 mx-auto mt-5 mb-5">
          
          <h1 class="text-center"style="font-family:cursive;color:Black;">Welcome To 
