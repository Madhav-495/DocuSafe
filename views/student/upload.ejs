    <section style="margin-top:7%;margin-bottom: 7.5%;">
        <div class="container mt-5 " >
            <h1 class="text-center" style="font-family:cursive;color: black;">Add Your Personal Notes</h1>
            <form action="/student/upload" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="FileName" class="lead">FileName</label>
                    <input
                    type="text"
                    name="fileName"
                    class="form-control"
                    id="fileName"
                    aria-describedby="emailHelp"
                    placeholder="Enter file name"
                  />
                </div>
                <div class="form-group">
                    <label class="lead">File Description</label>
                    <input
                      type="textarea"
                      name="fileDescription"
                      class="form-control"
                      id="fileDescription"
                      aria-describedby="emailHelp"
                      placeholder="Enter file description"
                      rows="10"
                      cols="40"
                    />
                </div>
                <div class="form-group" hidden>
                    <label class="lead">File Description</label>
                    <input
                      type="text"
                      name="hash"
                      class="form-control"
                      id="hash"
                      aria-describedby="emailHelp"
                      placeholder="Enter file description"
                    />
                </div>
                <div class="form-group">
                    <label class="lead">Choose File</label>
                    <input type="file" class="form-control-file" id="fileInput" name="file"/>
                </div>
                <!-- <div class="form-group droparea" style="height:100px;width:100px;background-color: black;">
                  <label class="lead">Or Drag and Drop File Here</label>
              </div> -->
                <div class="form-group">
                    <button
                      name="submit"
                      type="submit"
                      class="btn text-light mt-2 btn btn-success"
                      style=" width: 100%"
                    >
                      Upload Your File
                    </button>
                  </div>
            </form>        
        </div>
    </section>
<!-- code for the Upload section ends -->


